											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.println("My CGPA:"+(sgpa1/10)*10);
											break;
					
									case 2: System.out.println("CGPA for two sems");
											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.println("My CGPA:"+((sgpa1+sgpa2)/20)*10);
											break;
					
