											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.print("Sem-III=");
											sgpa3 = sc.nextFloat();
											System.out.println("My CGPA:"+((sgpa1+sgpa2+sgpa3)/30)*10);
											break;
					
					
									case 4: System.out.println("CGPA for two sems");
											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.print("Sem-III=");
											sgpa3 = sc.nextFloat();
											System.out.print("Sem-IV=");
											sgpa4 = sc.nextFloat();
											System.out.println("My CGPA:"+((sgpa1+sgpa2+
											sgpa3+sgpa4)/40)*10);
											break;
					
									case 5: System.out.println("CGPA for two sems");
											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.print("Sem-III=");
											sgpa3 = sc.nextFloat();
											System.out.print("Sem-IV=");
											sgpa4 = sc.nextFloat();
											System.out.print("Sem-V=");
											sgpa5 = sc.nextFloat();
											System.out.println("My CGPA:"+((sgpa1+sgpa2+sgpa3+
													sgpa4+sgpa5)/50)*10);
											break;
					
									case 6: System.out.println("CGPA for two sems");
											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.print("Sem-III=");
											sgpa3 = sc.nextFloat();
											System.out.print("Sem-IV=");
											sgpa4 = sc.nextFloat();
											System.out.print("Sem-V=");
											sgpa5 = sc.nextFloat();
											System.out.print("Sem-VI=");
											sgpa6 = sc.nextFloat();
											System.out.println("My CGPA:"+((sgpa1+sgpa2+sgpa3+
													sgpa4+sgpa5+sgpa6)/60)*10);
											break;
			
			
									case 7: System.out.println("CGPA for two sems");
											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.print("Sem-III=");
											sgpa3 = sc.nextFloat();
											System.out.print("Sem-IV=");
											sgpa4 = sc.nextFloat();
											System.out.print("Sem-V=");
											sgpa5 = sc.nextFloat();
											System.out.print("Sem-VI=");
											sgpa6 = sc.nextFloat();
											System.out.print("Sem-VII=");
											sgpa7 = sc.nextFloat();
											System.out.println("My CGPA:"+((sgpa1+sgpa2+sgpa3+sgpa4+
													sgpa5+sgpa6+sgpa7)/70)*10);
											break;
			
			
									case 8: System.out.println("CGPA for two sems");
											System.out.println("===Enter The SGPA===");
											System.out.print("Sem-I=");
											sgpa1 = sc.nextFloat();
											System.out.print("Sem-II=");
											sgpa2 = sc.nextFloat();
											System.out.print("Sem-III=");
											sgpa3 = sc.nextFloat();
											System.out.print("Sem-IV=");
											sgpa4 = sc.nextFloat();
											System.out.print("Sem-V=");
